    <link rel="stylesheet" href="./MySiteMain.css">
    <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  
</head>
<body style="background-color: black;">
<!-- ****************************  NAVIGATION **************************** -->

<nav class="navbar navbar-default navbar-fixed-top" style="border-bottom: 2px solid #696969;">
  <div class="container-fluid" style="border-style: none;">
    <div class="navbar-header" style="border-style: none;">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
       </button>
      <a class="navbar-brand" id="javaStreetNav" href="/"></a>
    </div>

       
        <ul class="nav navbar-nav navbar-right" style="margin-right: 50px; border-style: none;">
          <li><a style="width: 100px; text-align: center;" href="/blog" id="bioButton">Raps</a>
          </li>
          <li><a style="width: 100px; text-align: center;" href="/bio.html" id="bioButton">Bio</a>
          </li>
          <li><a style="width: 100px; text-align: center;" href="/login" id="bioButton">Sign In</a>
        </li>
        </ul>
    </div>
</nav>

<!-- ****************************** START CONTENT ****************************** -->
<div class="container" style="margin-top: 75px; vertical-align:center;">
<div class="col-sm-6 col-sm-offset-3">

<!-- ****************************** LOGIN FORM ****************************** -->

    <h1 style="color: white; text-align: center;">Log In to JavaStreet!</h1>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>


    <form action="/login" method="post" class="loginForm">
        <div class="form-group">
            <label style="color: white;">Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label style="color: white;">Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-primary btn-lg" style="margin-top: 15px;">Login</button>
    </form>

    <hr>

    <p style="text-align:right; color: white;">Need an account? <a href="/signup">Signup!</a></p>

</div>
</div>
</body>
</html>