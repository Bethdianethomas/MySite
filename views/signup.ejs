<html>
<head>
    <title>Log-In</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="./MySiteMain.css">
    <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
  
</head>
<body class="mySite">
<!-- ****************************  NAVIGATION **************************** -->

<nav class="navbar navbar-default navbar-fixed-top" style="border-bottom: 2px solid #696969;">
  <div class="container-fluid" style="border-style: none;">
    <div class="navbar-header" style="border-style: none;">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
       </button>
      <a class="navbar-brand" id="javaStreetNav" href="/"></a>
    </div>

       
        <ul class="nav navbar-nav navbar-right" style="margin-right: 50px; border-style: none;">
          <li><a style="width: 100px; text-align: center;" href="/blog" id="bioButton">Raps</a>
          </li>
          <li><a style="width: 100px; text-align: center;" href="/bio.html" id="bioButton">Bio</a>
          </li>
          <li><a style="width: 100px; text-align: center;" href="/login" id="bioButton">Sign In</a>
        </li>
        </ul>
    </div>
</nav>

<!-- ****************************** START CONTENT ****************************** -->
<div class="container" style="margin-top: 75px; vertical-align:center;">
<div class="col-sm-6 col-sm-offset-3">

    <h1 style="color: white; text-align: center;"> Signup for JavaStreet!</h1>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post" class="loginForm">
        <div class="form-group">
            <label style="color: white;">Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label style="color: white;">Password</label>
            <input type="password" class="form-control" name="password">
        </div>

         <button type="submit" class="btn btn-primary btn-lg" style="margin-top: 15px;">Sign Up</button>
    </form>

    <hr>

    <p style="text-align:right; color: white;">Already have an account? <a href="/login">Login</a></p>

</div>
</div>
</body>
</html>
